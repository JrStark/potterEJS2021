<%- include ("partials/header") %>
<div>
    <div class="soleil" id="soleil"></div>
</div>
<div id="background" class="background"></div>
<div id="fbackground" class="fbackground"></div>
<main class="container_list" uk-filter="target: .js-filter">
    <nav class="breadcrumb-content" aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Accueil</a></li>
          <li class="breadcrumb-item active" aria-current="page">Liste des personnages</li>
        </ol>
      </nav>

      <div class="borderTitle">
        <h2 class="h2_title">Les personnages de l'univers d'Harry Potter</h2>
           
     </div>

    <!-- filtre maison -->
    
        <ul class="uk-subnav uk-subnav-pill">
            <li class="uk-active" uk-filter-control><a href="#">
                Tous<span class="badge badge-fond-orange badge-pill">24</span>
            </a></li>
           
            <li uk-filter-control=".cardGryffondor">
                <a href="#">
                    Gryffondor<span class="badge badge-fond-orange badge-pill">12</span>
                </a>
            </li>
            <li uk-filter-control=".cardSerpentard">
                <a href="#">
                    Serpentard<span class="badge badge-fond-orange badge-pill">6</span>
                </a>
            </li>
            <li uk-filter-control=".cardSerdaigle">
                <a href="#">
                    Serdaigle<span class="badge badge-fond-orange badge-pill">3</span>
                </a>
            </li>
            <li uk-filter-control=".cardPoufsouffle">
                <a href="/maison/:id">
                    Poufsouffle<span class="badge badge-fond-orange badge-pill">3</span>
                </a>
            </li>
            <li uk-filter-control=".autres">
                <a href="#">
                    Autres<span class="badge badge-fond-orange badge-pill">0</span>
                </a>
            </li>
        </ul>
    
    <!-- Fin du filtre maison -->
    <ul class="js-filter uk-child-width-1-2 uk-child-width-1-3@m uk-text-center card-list da-thumbs" id="da-thumbs">
        <% for (let character of characters) { %>
        <li class="card-list-global card<%=character.maison %>">
            <a href="/character/<%= character.id %>" class="card text-white mb-3 <%=character.maison %>" id="card">
                <h3 class="<%=character.maison %> card-header"><%=character.firstname %> <%=character.lastname %></h3>
                <article class="card-body">
                <img src="/images/characters/<%= character.url %>.png" class="characters_thumbnails" alt="<%=character.firstname %> <%=character.lastname %>">
                    <div class="card_content card-hover-<%=character.maison %>">
                        <h5 class="<%= character.maison %> card-title"><%= character.maison %></h5>
                        <img src="/images/<%= character.maison %>.png" class="maison_thumbnails" alt="maison <%= character.maison %>">
                    <% console.log(character.maison); %>
                    </div>
                </article>
            </a>
        </li>
    <% } %>
     </ul>
     <script type="text/javascript">
        $(function() {

            $(' #da-thumbs > li ').each( function() { $(this).hoverdir({
                hoverDelay : 75
            }); } );

        });
    </script>
</main>
<!-- End of main content -->
<%- include('partials/footer') %>
